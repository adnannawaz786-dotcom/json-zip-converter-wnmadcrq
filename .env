# Environment variables for json-zip-converter

# Application Configuration
VITE_APP_NAME=JSON Zip Converter
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Convert JSON data to downloadable ZIP files with file tree visualization

# File Processing Limits
VITE_MAX_FILE_SIZE=10485760
VITE_MAX_FILES_PER_ZIP=1000
VITE_MAX_FOLDER_DEPTH=10

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_ANIMATIONS=true
VITE_SHOW_FILE_SIZES=true

# Development Settings
VITE_DEV_MODE=true
VITE_ENABLE_CONSOLE_LOGS=true

# Error Handling
VITE_SHOW_DETAILED_ERRORS=true
VITE_ERROR_REPORTING=false

# Performance Settings
VITE_ENABLE_FILE_COMPRESSION=true
VITE_COMPRESSION_LEVEL=6
VITE_CHUNK_SIZE=1048576

# Feature Flags
VITE_ENABLE_FILE_PREVIEW=true
VITE_ENABLE_DRAG_DROP=true
VITE_ENABLE_BULK_OPERATIONS=true
VITE_ENABLE_EXPORT_FORMATS=json,zip

# Security Settings
VITE_SANITIZE_FILENAMES=true
VITE_VALIDATE_FILE_TYPES=true
VITE_BLOCK_EXECUTABLE_FILES=true